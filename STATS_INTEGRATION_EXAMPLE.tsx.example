// ============================================
// EXAMPLE: Conditional Stats Display
// ============================================

import { usePlatformStats } from "@/lib/web3/hooks/usePlatformStats";

export function ConditionalStats() {
  const { stats, isLoading } = usePlatformStats();

  // Show alert if activation rate is low
  const activationRate = stats && stats.totalUsers > 0 
    ? (stats.totalActivations / stats.totalUsers) * 100 
    : 0;

  return (
    <div>
      {!isLoading && activationRate < 50 && (
        <div className="bg-yellow-500/10 border border-yellow-500/30 rounded-lg p-4 mb-4">
          <p className="text-yellow-400">
            <i className="fas fa-exclamation-triangle mr-2"></i>
            Low activation rate: {activationRate.toFixed(1)}%
          </p>
        </div>
      )}
      
      {/* Rest of your component */}
    </div>
  );
}

