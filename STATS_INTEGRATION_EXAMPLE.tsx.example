// ============================================
// EXAMPLE: Custom Statistics Display
// ============================================

import { usePlatformStats } from "@/lib/web3/hooks/usePlatformStats";

export function CustomStatsCard() {
  const { stats, isLoading, error, refresh } = usePlatformStats();

  if (isLoading) return <div>Loading stats...</div>;
  if (error) return <div>Error: {error}</div>;

  return (
    <div className="bg-gray-800 rounded-xl p-6">
      <h2 className="text-xl font-bold mb-4">Platform Overview</h2>
      
      <div className="grid grid-cols-2 gap-4">
        <div>
          <p className="text-gray-400 text-sm">Total Users</p>
          <p className="text-2xl font-bold text-neon-blue">
            {stats?.totalUsers.toLocaleString()}
          </p>
        </div>
        
        <div>
          <p className="text-gray-400 text-sm">Total Invested</p>
          <p className="text-2xl font-bold text-green-400">
            ${parseFloat(stats?.totalInvested || '0').toLocaleString()}
          </p>
        </div>
        
        <div>
          <p className="text-gray-400 text-sm">ROI Paid</p>
          <p className="text-2xl font-bold text-electric-purple">
            ${parseFloat(stats?.totalROIPaid || '0').toLocaleString()}
          </p>
        </div>
        
        <div>
          <p className="text-gray-400 text-sm">Active Pools</p>
          <p className="text-2xl font-bold text-cyan-400">
            {stats?.activePools}
          </p>
        </div>
      </div>

      <button 
        onClick={() => refresh()}
        className="mt-4 px-4 py-2 bg-neon-blue/20 text-neon-blue rounded-lg"
      >
        Refresh Stats
      </button>
    </div>
  );
}

// ============================================
// EXAMPLE: Real-Time Event Monitor
// ============================================

import { useRealtimeEvents } from "@/lib/web3/hooks/useRealtimeEvents";

export function EventMonitor() {
  const { events, isListening, clearEvents } = useRealtimeEvents(true);

  // Filter specific event types
  const investments = events.filter(e => e.type === 'InvestmentMade');
  const roiClaims = events.filter(e => e.type === 'ROIClaimed');

  return (
    <div className="bg-gray-800 rounded-xl p-6">
      <div className="flex items-center justify-between mb-4">
        <h2 className="text-xl font-bold">Live Events</h2>
        <div className="flex items-center space-x-2">
          {isListening && (
            <>
              <div className="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
              <span className="text-sm text-green-400">Live</span>
            </>
          )}
        </div>
      </div>

      <div className="grid grid-cols-2 gap-4 mb-4">
        <div className="bg-gray-700 rounded-lg p-3">
          <p className="text-sm text-gray-400">Recent Investments</p>
          <p className="text-2xl font-bold text-yellow-400">{investments.length}</p>
        </div>
        <div className="bg-gray-700 rounded-lg p-3">
          <p className="text-sm text-gray-400">ROI Claims</p>
          <p className="text-2xl font-bold text-green-400">{roiClaims.length}</p>
        </div>
      </div>

      <div className="space-y-2 max-h-64 overflow-y-auto">
        {events.slice(0, 10).map((event, index) => (
          <div key={index} className="bg-gray-700 rounded-lg p-3">
            <div className="flex items-center justify-between">
              <span className="text-sm text-white">{event.type}</span>
              <span className="text-xs text-gray-400">
                {new Date(event.timestamp).toLocaleTimeString()}
              </span>
            </div>
            {event.amount && (
              <p className="text-sm text-gray-400 mt-1">
                Amount: ${parseFloat(event.amount).toFixed(2)}
              </p>
            )}
          </div>
        ))}
      </div>

      <button 
        onClick={clearEvents}
        className="mt-4 w-full px-4 py-2 bg-red-500/20 text-red-400 rounded-lg"
      >
        Clear Events
      </button>
    </div>
  );
}

// ============================================
// EXAMPLE: Statistics Summary Widget
// ============================================

import { usePlatformStats } from "@/lib/web3/hooks/usePlatformStats";

export function StatsSummaryWidget() {
  const { stats } = usePlatformStats();

  const totalPaid = stats ? 
    parseFloat(stats.totalROIPaid) + 
    parseFloat(stats.totalLevelIncome) + 
    parseFloat(stats.totalCapitalReturned) : 0;

  const activationRate = stats && stats.totalUsers > 0 
    ? (stats.totalActivations / stats.totalUsers) * 100 
    : 0;

  return (
    <div className="bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl p-4 border border-gray-700">
      <h3 className="font-bold text-white mb-3">Quick Stats</h3>
      
      <div className="space-y-2 text-sm">
        <div className="flex justify-between">
          <span className="text-gray-400">Users</span>
          <span className="text-white font-semibold">{stats?.totalUsers || 0}</span>
        </div>
        
        <div className="flex justify-between">
          <span className="text-gray-400">Invested</span>
          <span className="text-white font-semibold">
            ${parseFloat(stats?.totalInvested || '0').toFixed(0)}
          </span>
        </div>
        
        <div className="flex justify-between">
          <span className="text-gray-400">Paid Out</span>
          <span className="text-white font-semibold">
            ${totalPaid.toFixed(0)}
          </span>
        </div>
        
        <div className="flex justify-between">
          <span className="text-gray-400">Activation</span>
          <span className="text-white font-semibold">
            {activationRate.toFixed(1)}%
          </span>
        </div>
      </div>
    </div>
  );
}

